{
  "name": "@grafana/create-plugin",
  "version": "0.2.1",
  "main": "index.js",
  "repository": {
    "directory": "packages/create-plugin",
    "url": "git@github.com:grafana/plugin-tools.git"
  },
  "author": "Grafana",
  "license": "Apache-2.0",
  "bin": "./dist/bin/run.js",
  "scripts": {
    "clean": "rm -rf ./dist ./generated",
    "clean-generated": "find ./generated -not -path \"./generated/node_modules*\" -not -path \"./generated\" -not -path \"./generated/yarn.lock\" -print0 | xargs -0  -I {} rm -rf {}",
    "build": "yarn clean && tsc && chmod +x ./dist/bin/run.js",
    "dev": "CREATE_PLUGIN_DEV=true nodemon --exec 'tsc'",
    "dev-app": "CREATE_PLUGIN_DEV=true nodemon --exec 'yarn generate-app'",
    "dev-panel": "CREATE_PLUGIN_DEV=true nodemon --exec 'yarn generate-panel'",
    "dev-datasource": "CREATE_PLUGIN_DEV=true nodemon --exec 'yarn generate-datasource'",
    "generate-app": "tsc && yarn clean-generated && CREATE_PLUGIN_DEV=true node ./dist/bin/run.js -- create-plugin 'Sample app' 'sample-org' 'This is a sample app.' 'app' 't' 't' 't'",
    "generate-panel": "tsc && yarn clean-generated && CREATE_PLUGIN_DEV=true node ./dist/bin/run.js -- create-plugin 'Sample panel' 'sample-org' 'This is a sample panel.' 'panel' 't' 't' 't'",
    "generate-datasource": "tsc && yarn clean-generated && CREATE_PLUGIN_DEV=true node ./dist/bin/run.js -- create-plugin 'Sample datasource' 'sample-org' 'This is a sample datasource.' 'datasource' 't' 't' 't'",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/minimist": "^1.2.2",
    "@types/mkdirp": "^1.0.2",
    "@types/semver": "^7.3.9",
    "enquirer": "^2.3.6",
    "glob": "^7.1.7",
    "marked": "^4.0.12",
    "marked-terminal": "^5.1.1",
    "mkdirp": "^1.0.4",
    "plop": "^2.7.4",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/glob": "^7.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*",
      "templates/**/*"
    ],
    "ext": "*",
    "events": {
      "start": "cls || clear"
    }
  },
  "engines": {
    "node": ">=16"
  }
}
